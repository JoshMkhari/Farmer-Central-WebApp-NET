@model ST1109348.Models.RegisterViewModel
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_farmerLayout.cshtml";
}

<div class="pagetitle">
    <h1>Farmers</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href=@Url.Action("Index", "Farmer")>Dashboard</a></li>
            <li class="breadcrumb-item active">Products</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section profile">
    <div class="row">
        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Add</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <h5 class="card-title">Add new Product</h5>

                            @using (Html.BeginForm("Products", "Farmer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.CategoryId, new { @class = "col-md-5 control-label" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(m => m.Product.CategoryId, new SelectList(Model.CategoryList, "Id", "Name"))
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.Name, new { @class = "col-md-5 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control" })
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.Weight, new { @class = "col-md-5 control-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(m => m.Product.Weight, new { @class = "form-control" })
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.MovementId, new { @class = "col-md-5 control-label" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(m => m.Product.MovementId, new SelectList(Model.MovementList, "Id", "Name"))
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.Quantity, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(m => m.Product.Quantity, new { @class = "form-control" })
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.ProductionDate, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-4">
                                        <div class="md-form md-outline input-with-post-icon datepicker">
                                            <input placeholder="Select date" type="date" id="ProductionDate" class="form-control">
                                            <input type="hidden" id="productionValue" name="productionValue" value="3487">
                                        </div>
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.ExpirationDate, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-4">
                                        <div class="md-form md-outline input-with-post-icon datepicker">
                                            <input placeholder="Select date" type="date" id="ExpirationDate" class="form-control">
                                            <input type="hidden" id="expirationValue" name="expirationValue" value="3487">
                                        </div>
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.FreezeByDate, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-4">
                                        <div class="md-form md-outline input-with-post-icon datepicker">
                                            <input placeholder="Select date" type="date" id="FreezeByDate" class="form-control">
                                            <input type="hidden" id="freezeByValue" name="freezeByValue" value="3487">
                                        </div>
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product.SellByDate, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-4">
                                        <div class="md-form md-outline input-with-post-icon datepicker">
                                            <input placeholder="Select date" type="date" id="SellByDate" class="form-control">
                                            <input type="hidden" id="sellByValue" name="sellByValue" value="3487">
                                        </div>
                                    </div>
                                </div>
                                <p />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button class="btn btn-primary w-100" type="submit" onclick="myFunction()">Add Product</button>
                                    </div>
                                </div>

                            }
                        </div>

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>

    <script>
        function myFunction() {
            document.getElementById("productionValue").value = document.getElementById("ProductionDate").value;
            document.getElementById("expirationValue").value = document.getElementById("ExpirationDate").value;
            document.getElementById("freezeByValue").value = document.getElementById("FreezeByDate").value;
            document.getElementById("sellByValue").value = document.getElementById("SellByDate").value;
        }
    </script>
</section>

